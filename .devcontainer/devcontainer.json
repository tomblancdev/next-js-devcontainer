{
	"name": "Node.js & TypeScript",
	"dockerComposeFile": [
		// "../../docker-compose.yml", // ! ðŸ‘ˆ Uncomment or change this to the path of your docker-compose file.
		"./docker-compose.dev.yml"
	],
	"service": "next-js-devcontainer",
	"workspaceFolder": "/workspace",
	"shutdownAction": "stopCompose",
	"postCreateCommand": "bash /workspace/.devcontainer/scripts/post-create.sh",
	"postStartCommand": "bash /workspace/.devcontainer/scripts/post-start.sh",
	"containerEnv": {
		"GIT_TEMPLATE_REPO_URLS": "https://github.com/tomblancdev/next-js-devcontainer.git", // ! ðŸ‘ˆ Change this to your templates repositories.
		"GIT_TEMPLATE_REMOTE_NAME": "TEMPLATE" // ! ðŸ‘ˆ Change this to your template remote.
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"github.copilot", // Copilot extension for VS Code
				"github.vscode-pull-request-github", // Pull Request extension for VS Code
				"aaron-bond.better-comments", // Better Comments extension for VS Code
				"streetsidesoftware.code-spell-checker", // Code Spell Checker extension for VS Code
				"dbaeumer.vscode-eslint", // ESLint extension for VS Code
				"esbenp.prettier-vscode", // Prettier extension for VS Code
				"bradlc.vscode-tailwindcss", // Tailwind CSS IntelliSense extension for VS Code
				"formulahendry.auto-rename-tag", // Auto Rename Tag extension for VS Code
				"britesnow.vscode-toggle-quotes" // Toggle Quotes extension for VS Code
			],
			"settings": {
				// ### Global settings ###
				"editor.codeActionsOnSave": {
					"source.organizeImports": "explicit",
					"source.fixAll": "explicit"
				},
				"editor.formatOnSave": true,
				"editor.formatOnPaste": true
			}
		}
	},
	"features": {},
	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}